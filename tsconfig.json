{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		// "module": "commonjs",
		"module": "es2022",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"moduleResolution": "node"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".d.ts",
		"./typechain"
	],
	"exclude": [
		"node_modules",
		"src/contracts",
		"hardhat.config.ts",
		"src/multiplayer-service"
	],
	"files": ["./hardhat.config.ts"]
}
